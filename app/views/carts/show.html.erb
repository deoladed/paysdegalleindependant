<% content_for :title, 'Mon panier' %>
<% content_for :img, "adorable-chatons.jpg" %>
<%= render 'shared/banner-mini-choice' %> 

<% content_for :show_what do %>
    <%= render @products %>
<% end %>

<% content_for :button do %>
    <% unless @products.empty? %>    
        <%= link_to new_cart_order_path(@cart.id) do %>
            <button type="button" rel="tooltip" class="btn btn-info btn-round" id="purchase-btn">
                Purchase
                <i class="now-ui-icons arrows-1_minimal-right"></i>
            </button>
        <% end %>
    <% end %>
<% end %>

<% content_for :total do %>
    <%= @cart.total  %>
<% end %>

<% content_for :empty_basket do %>
    <% unless @cart.total_items == 0 %>
        <%= link_to 'Vider le panier', cart_path(@cart.id), id:'empty-basket', remote: true, method: :delete, data: {confirm: 'Are you sure ?'} %>
    <% end %>
<% end %>

<br>
<div class="container">
  <div class="row">                             
    <div class="col-md-12">
        <h4>
            <small>Mon panier</small>
        </h4>
        <%= render 'shared/product_cartorder' %>
    </div>
  </div>
</div>
