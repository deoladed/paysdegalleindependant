<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br>
      <%= form_for(@profile) do |f| %>
      <h1 class="h3 mb-3 font-weight-normal text-center">Update your informations</h1>

      <div class="form-group">
        <%= f.label :username, 'Pseudo' %><br />
        <%= f.text_field :username, autofocus: true, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :first_name, 'Prenom' %><br />
        <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :last_name, 'Nom' %><br />
        <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
      </div>

      <%= form_tag avatars_create_path(@user), multipart: true do %>
  <%= file_field_tag :avatar %>
  <%= submit_tag "mettre Ã  jour" %>
<% end %>

      <div class="actions mt-5">
        <%= f.submit "Update", class: "btn btn-lg btn-primary btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
